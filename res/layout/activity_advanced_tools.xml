<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context="com.flyingh.moguard.AdvancedToolsActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:onClick="queryPhoneNumber"
        android:padding="3dp"
        android:text="@string/query_phone_number_attribution"
        android:textColor="#0f0"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        tools:targetApi="14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="@string/phone_nubmer_attribution_setup"
        android:textColor="#0f0"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/serviceStatusTextView"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/service_not_starts"
                android:textColor="#0f0"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/startOrNotCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/showInfoTextView"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/show_short_information"
                android:textColor="#0f0"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/showDetailOrNotCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        tools:targetApi="14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="selectPhoneAttributionStyle"
        android:padding="3dp"
        android:text="@string/select_phone_attribution_style"
        android:textColor="#0f0"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        tools:targetApi="14" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="setPhoneAttributionPosition"
        android:padding="3dp"
        android:text="@string/set_phone_attribution_position"
        android:textColor="#0f0"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        tools:targetApi="14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="backupSms"
            android:text="@string/backup_sms"
            android:textColor="#0f0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:onClick="restoreSms"
            android:text="@string/restore_sms"
            android:textColor="#0f0" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"
        tools:targetApi="14" />

</LinearLayout>