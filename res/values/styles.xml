<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SecurityDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="setup_wizard_process_title">
        <item name="android:textColor">#0f0</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="divide_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:src">@drawable/divide_line</item>
        <item name="android:contentDescription">@string/divide_line</item>
    </style>

    <style name="security_wizard_feature" parent="android:Widget.Holo.Light.TextView">
        <item name="android:drawableLeft">@android:drawable/btn_star_big_on</item>
        <item name="android:textColor">#0f0</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="presence_online">
        <item name="android:contentDescription">@string/process</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="presence_offline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">@string/process</item>
    </style>

    <style name="btn_previous_next" parent="android:Widget.Holo.Light.Button">
        <item name="android:textColor">#0f0</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="btn_next" parent="btn_previous_next">
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:text">@string/next</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="btn_previous" parent="btn_previous_next">
        <item name="android:drawableRight">@drawable/previous</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:text">@string/previous</item>
    </style>

    <style name="setup_wizard_title" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#0f0</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>